ngx_module_name="ngx_http_rate_request_module"
ngx_addon_name=$ngx_module_name

next="ngx_http_auth_request_module"

HTTP_MODULES=`echo $HTTP_MODULES \
                 | sed "s/$next/$ngx_module_name $next/"`

NGX_ADDON_SRCS="$NGX_ADDON_SRCS \
		$ngx_addon_dir/src/ngx_http_rate_request_module_ctx.c \
		$ngx_addon_dir/src/ngx_http_rate_request_handler.c \
		$ngx_addon_dir/src/ngx_http_rate_request_conf.c \
		$ngx_addon_dir/src/ngx_http_rate_request_commands.c \
		$ngx_addon_dir/src/ngx_http_rate_request_variables.c \
		$ngx_addon_dir/src/ngx_http_rate_request_module.c"